<%- include('./partials/head.ejs') %>

    <title>INCB | Home</title>
  </head>
  <body class="flex flex-col">
    <%- include('./partials/header.ejs') %>

    <main class="container mx-auto pt-16 flex-1">
      
      <section class="text-center">
        <input
          class="rounded-2xl border-2 w-2/4"
          type="search"
          placeholder="search..."
        />
      </section>

      <section class="pt-16">
        <h2 class="text-2xl text-red-500 font-semibold">Awards Winners</h2>
        <div class="grid grid-cols-5 pt-10 gap-3">
          <% popularMovies.forEach((movie) => { %>
          <div class="text-center bg-gray-900 rounded-lg text-white">
            <a href="/title/<%= movie._id %>">
              <img
                class="w-full h-[350px]"
                src="<%= movie.poster %>"
                alt="<%= movie.title %> poster"
              />
            </a>
            <h2
              class="
                p-2
                whitespace-nowrap
                overflow-hidden overflow-ellipsis
                font-medium
                text-lg
              "
            >
              <a class="hover:underline" href="/title/<%= movie._id %>"
                ><%= movie.title %></a
              >
            </h2>
            <div class="flex justify-center pb-2">
              <p><%= movie.imdb.rating %></p>
            </div>
          </div>
          <% }) %>
        </div>
      </section>

      <section class="pt-16">
        <h2 class="text-2xl text-red-500 font-semibold">Newest</h2>
        <div class="grid grid-cols-5 pt-10 gap-3">
          <% newestMovies.forEach((movie) => { %>
          <div class="text-center bg-gray-900 rounded-lg text-white">
            <a href="/title/<%= movie._id %>">
              <img
                class="w-full h-[350px]"
                src="<%= movie.poster %>"
                alt="<%= movie.title %> poster"
              />
            </a>
            <h2
              class="
                p-2
                whitespace-nowrap
                overflow-hidden overflow-ellipsis
                font-medium
                text-lg
              "
            >
              <a class="hover:underline" href="/title/<%= movie._id %>"
                ><%= movie.title %></a
              >
            </h2>
            <div class="flex justify-center pb-2">
              <p><%= movie.imdb.rating %></p>
            </div>
          </div>
          <% }) %>
        </div>
      </section>
    </main>

    <%- include('./partials/footer.ejs') %>
  </body>
</html>
